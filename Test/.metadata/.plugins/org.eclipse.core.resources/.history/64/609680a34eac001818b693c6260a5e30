package FirstHeadDesign.Decoration;

public class Beer extends Drink {
private Drink drink;

	public Beer(Drink drink) {
		this.drink=drink;
		description="Beer";
	}
	@Override
	public String getDescription() {
		// TODO Auto-generated method stub
		return drink.getDescription()+description;
	}

	@Override
	public int cost() {
		// TODO Auto-generated method stub
		return 0;
	}

}
