package FirstHeadDesign.Decoration;

public class Beer extends Drink {
private Drink drink;

	public Beer(Drink drink) {
		this.drink=drink;
		description="Beer";
		cost=15;
	}
	@Override
	public String getDescription() {
		// TODO Auto-generated method stub
		return drink.getDescription()+description;
	}

	@Override
	public int cost() {
		// TODO Auto-generated method stub
		return cost()+cost;
	}

}
